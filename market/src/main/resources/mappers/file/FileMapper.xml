<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.free.market.file.mapper.FileMapper">

    <!-- tb_file 테이블 전체 컬럼 -->
    <sql id="fileColumns">
        id
        , item_id
        , original_name
        , save_name
        , size
        , delete_yn
        , created_date
        , deleted_date
    </sql>

    <!-- tb_file 테이블 전체 컬럼 -->
    <sql id="fileColumnsWithOutId">
        item_id
        , original_name
        , save_name
        , size
        , delete_yn
        , created_date
        , deleted_date
    </sql>

    <insert id="saveAll">
        INSERT INTO tb_file (
            <include refid="fileColumnsWithOutId" />
        ) VALUE
        <foreach item="file" collection="list" separator=",">
            (
                #{file.itemId}
                , #{file.originalName}
                , #{file.saveName}
                , #{file.size}
                , 0
                , NOW()
                , NULL
            )
        </foreach>
    </insert>

    <!-- 파일 리스트 조회 -->
    <select id="findAllByItemId" resultType="FileResponse">
        SELECT
            <include refid="fileColumns" />
        FROM
            tb_file
        WHERE
            delete_yn = 0
            AND item_id = #{itemId}
        ORDER BY
            id
    </select>

    <!-- 파일 리스트 조회 -->
    <select id="findAllByIds" resultType="FileResponse">
        SELECT
            <include refid="fileColumns" />
        FROM
            tb_file
        WHERE
            delete_yn = 0
            AND id IN
            <foreach item="id" collection="list" open="(" separator="," close=")">
                #{id}
            </foreach>
        ORDER BY
            id
    </select>

    <!-- 파일 삭제 -->
    <delete id="deleteAllByIds">
        UPDATE tb_file
        SET
            delete_yn = 1
            , deleted_date = NOW()
        WHERE
            id IN
            <foreach item="id" collection="list" open="(" separator="," close=")">
                #{id}
            </foreach>
    </delete>

    <!-- 파일 상세 정보 조회 -->
    <select id="findById" parameterType="Long" resultType="FileResponse">
        SELECT
            <include refid="fileColumns" />
        FROM
            tb_file
        WHERE
            delete_yn = 0
            AND id = #{fileId}
    </select>
</mapper>